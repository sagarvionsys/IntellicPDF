generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  HUMAN
  AI
  PLACEHOLDER
}

enum Plan {
 BASIC
 PRO
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  email          String   @unique
  image          String?
  password       String?  
  authProvider   String?  
  authProviderId String?  
  createdAt      DateTime @default(now())
  plan           Plan    @default(BASIC)

}

model File {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  fileId    String  @unique
  userId    String  @db.ObjectId
  fileUrl   String
  fileName  String
  fileSize  Int
  type      String
  createdAt DateTime @default(now())
}

model Chat {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  fileId    String   
  userId    String   @db.ObjectId
  role      Role     
  message   String
  createdAt DateTime @default(now())

}
